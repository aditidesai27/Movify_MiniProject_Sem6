        android:layout_height="wrap_content"
        android:padding="2dp">

        <TableRow android:padding="4dp">

            <CheckBox
                android:id="@+id/romance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/option_1"
                android:padding="2dp"
                />

            <CheckBox
                android:id="@+id/mystrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:background="@drawable/option_2" />


        </TableRow>
        <TableRow android:padding="4dp">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
